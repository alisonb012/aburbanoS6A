<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aburbanoS6A.View.VCrud"
             Title="VCrud">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">


            <Label Text="CRUD DE PRODUCTOS"
               FontAttributes="Bold"
               FontSize="28"
               HorizontalOptions="Center"
               TextColor="#333" />

          
            <Grid Padding="10" BackgroundColor="#E0E0E0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>

                <Label Text="ID" Grid.Column="0" FontAttributes="Bold" TextColor="#555" HorizontalOptions="Center" />
                <Label Text="Nombre" Grid.Column="1" FontAttributes="Bold" TextColor="#555" />
                <Label Text="Descripci칩n" Grid.Column="2" FontAttributes="Bold" TextColor="#555" />
                <Label Text="Precio" Grid.Column="3" FontAttributes="Bold" TextColor="#555" HorizontalOptions="End" />
            </Grid>

            <ListView x:Name="lvProductos"
                  HasUnevenRows="True"
                  ItemSelected="lvProductos_ItemSelected"
                  SeparatorVisibility="None"
                  BackgroundColor="Transparent">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Margin="5,4"
                               Padding="10"
                               BackgroundColor="White"
                               CornerRadius="10"
                               HasShadow="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding id}"
                                       Grid.Column="0"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       FontSize="14"
                                       TextColor="#444" />

                                    <Label Text="{Binding productName}"
                                       Grid.Column="1"
                                       VerticalOptions="Center"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#222" />

                                    <Label Text="{Binding productDescription}"
                                       Grid.Column="2"
                                       VerticalOptions="Center"
                                       FontSize="14"
                                       TextColor="#666"
                                       LineBreakMode="TailTruncation" />

                                    <Label Text="{Binding uniPrice, StringFormat='{}{0:C}'}"
                                       Grid.Column="3"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       FontSize="14"
                                       TextColor="#228B22"
                                       FontAttributes="Bold" />
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button x:Name="btnA침adir"
                Text="A침adir producto"
                BackgroundColor="#007ACC"
                TextColor="White"
                CornerRadius="8"
                HeightRequest="45"
                FontAttributes="Bold"
                Clicked="btnA침adir_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>